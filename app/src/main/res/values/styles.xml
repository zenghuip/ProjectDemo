<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_main_color</item>
        <item name="colorPrimaryDark">@color/common_main_color</item>
        <item name="android:statusBarColor">@color/common_main_color</item>
    </style>

    <style name="dialog_notitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/popup_animation</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
        <item name="layout_collapseMode">pin</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_title_height</item>
    </style>

    <style name="AppBarLayout" parent="match_wrap">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CoordinatorLayout" parent="match_match">
        <item name="android:background">@color/color_tv_white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CollapsingToolbarLayout" parent="match_match">
        <item name="contentScrim">@color/color_tv_purple_2f</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="collapsing_tab" parent="match_wrap">
        <item name="android:layout_height">@dimen/common_35dp</item>
        <item name="android:background">@color/color_tv_gray_e5</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="collapsingToolbarLayout_layout" parent="match_wrap">
        <item name="android:layout_height">@dimen/common_250dp</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/activity_title_height</item>
    </style>

    <style name="collapsing_tab_text" parent="match_wrap">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/tab_textbottom_selector</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/color_tv_purple_2f</item>
    </style>

    <style name="collapsing_viewpager" parent="match_wrap">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <!--<style name="Custom_Progress" parent="@android:style/Theme.Dialog">-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="popup_animation">
        <item name="android:windowEnterAnimation">@anim/pop_win_in_up</item>
        <item name="android:windowExitAnimation">@anim/pop_win_out_down</item>
    </style>

    <style name="common_line_hor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_0.5dp</item>
        <item name="android:background">@color/color_tv_gray_ea</item>
    </style>

    <style name="common_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:listSelector">@color/color_tv_trans</item>
        <item name="android:background">@color/color_tv_white</item>
        <item name="android:divider">@color/color_tv_gray_e2</item>
        <item name="android:dividerHeight">@dimen/common_0.5dp</item>
        <item name="android:scrollbars">none</item>
    </style>
    <!-- 直线样式 -->
    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/color_tv_gray_e9</item>
    </style>
    <!-- 直线样式 -->
    <style name="line_margin_15_style" parent="line_style">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="common_white_linear" parent="match_wrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/color_tv_white</item>
    </style>

    <style name="title_layout" parent="match_wrap">
        <item name="android:layout_height">@dimen/activity_title_height</item>
        <item name="android:background">@color/common_main_color</item>
    </style>

    <style name="title_textview" parent="wrap_match">
        <item name="android:textColor">@color/color_tv_white</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/common_30dp</item>
        <item name="android:layout_marginRight">@dimen/common_20dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="title_left" parent="title_textview">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:drawableLeft">@drawable/icon_setting</item>
        <item name="android:drawablePadding">@dimen/common_2dp</item>
        <item name="android:layout_marginLeft">@dimen/title_left_right</item>
    </style>

    <style name="title_right" parent="title_textview">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:padding">@dimen/title_left_right</item>
    </style>

    <style name="title_icon" parent="wrap_match">
        <item name="android:padding">@dimen/title_left_right</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tabitem_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@drawable/font_main_bottom_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="login_edittext" parent="match_wrap">
        <item name="android:padding">@dimen/common_12dp</item>
        <item name="android:background">@color/color_tv_gray_f0</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/color_tv_black_55</item>
        <item name="android:textColorHint">@color/color_tv_gray_bb</item>
        <item name="android:layout_marginLeft">@dimen/common_12dp</item>
        <item name="android:layout_marginRight">@dimen/common_12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
    </style>

    <style name="login_getcode" parent="match_wrap">
        <item name="android:background">@drawable/login_getcode_selector</item>
        <item name="android:layout_height">@dimen/common_40dp</item>
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:textColor">@color/color_tv_white</item>
        <item name="android:padding">@dimen/common_8dp</item>
        <item name="android:layout_marginRight">@dimen/common_12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_btn" parent="match_wrap">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/color_tv_white</item>
        <item name="android:layout_marginRight">@dimen/common_12dp</item>
        <item name="android:layout_marginLeft">@dimen/common_12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 个人中心文字-->
    <style name="myinfo_textview_word_style" parent="wrap_wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/color_tv_black_07</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <!-- 个人中心文字-->
    <style name="myinfo_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@color/color_tv_white</item>
    </style>

    <style name="myinfo_hint_textview_word_style" parent="match_match">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">@color/color_tv_gray_99</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="into_textview_style" parent="wrap_wrap">
        <item name="android:background">@drawable/into</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/common_12dp</item>
    </style>

    <style name="image_clear" parent="into_textview_style">
        <item name="android:background">@drawable/clear</item>
    </style>

    <style name="input_text_edittext" parent="match_wrap">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/common_12dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/color_tv_black_33</item>
        <item name="android:textColorHint">@color/color_tv_gray_99</item>
    </style>

    <!--mine-->
    <style name="mine_common_text" parent="wrap_wrap">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/common_10dp</item>
        <item name="android:layout_marginRight">@dimen/common_10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/color_tv_purple_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mine_text" parent="mine_common_text">
        <item name="android:layout_height">@dimen/common_40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/common_10dp</item>
        <item name="android:paddingRight">@dimen/common_10dp</item>
        <item name="android:drawableRight">@drawable/icon_right_btn</item>
        <item name="android:background">@drawable/border_white_bg</item>
    </style>

    <style name="mine_layout" parent="mine_common_text">
        <item name="android:layout_height">@dimen/common_40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/border_white_bg</item>
    </style>

    <!--index-->
    <style name="index_top_rl" parent="match_wrap">
        <item name="android:background">@drawable/icon_index_bg</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="index_top_tv" parent="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/common_2dp</item>
        <item name="android:textColor">@color/color_tv_white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="index_bet_countdown" parent="wrap_wrap">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/common_15dp</item>
        <item name="android:paddingTop">@dimen/common_12dp</item>
        <item name="isShowDay">true</item>
        <item name="isShowHour">true</item>
        <item name="isShowMinute">true</item>
        <item name="isShowSecond">true</item>
        <item name="isShowMillisecond">false</item>
        <item name="isTimeTextBold">true</item>
        <item name="suffixGravity">below</item>
        <item name="suffixDay">@string/day</item>
        <item name="suffixHour">@string/hour</item>
        <item name="suffixMinute">@string/minute</item>
        <item name="suffixSecond">@string/second</item>
        <item name="suffixMargin">@dimen/common_10dp</item>
        <item name="suffixTopMargin">@dimen/common_10dp</item>
        <item name="suffixTextSize">@dimen/text_size_10sp</item>
        <item name="timeTextSize">@dimen/text_size_14sp</item>
        <item name="suffixTextColor">@color/color_tv_pink_ff</item>
        <item name="timeTextColor">@color/color_tv_pink_ff</item>
    </style>


    <style name="guess_detail_top_text" parent="wrap_wrap">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_tv_white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">2</item>
        <item name="android:layout_marginTop">@dimen/common_6dp</item>
    </style>

</resources>
